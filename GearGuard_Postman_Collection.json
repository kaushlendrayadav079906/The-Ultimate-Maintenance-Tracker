{
  "info": {
    "name": "GearGuard API Tests",
    "description": "Complete API testing for GearGuard Maintenance System"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Manager\",\n  \"email\": \"manager@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"Manager\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "2. Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"manager@test.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "3. Create Team",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"teamName\": \"IT Support\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/teams",
          "host": ["{{baseUrl}}"],
          "path": ["teams"]
        }
      }
    },
    {
      "name": "4. Create Equipment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"equipmentName\": \"Server Rack\",\n  \"serialNumber\": \"SR001\",\n  \"department\": \"IT\",\n  \"location\": \"Data Center\",\n  \"assignedEmployee\": \"John Doe\",\n  \"purchaseDate\": \"2023-01-15\",\n  \"warrantyExpiry\": \"2025-01-15\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/equipment",
          "host": ["{{baseUrl}}"],
          "path": ["equipment"]
        }
      }
    },
    {
      "name": "5. Create Maintenance Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"subject\": \"Server overheating issue\",\n  \"requestType\": \"Corrective\",\n  \"equipment\": \"REPLACE_WITH_EQUIPMENT_ID\",\n  \"scheduledDate\": \"2024-01-20T10:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/requests",
          "host": ["{{baseUrl}}"],
          "path": ["requests"]
        }
      }
    },
    {
      "name": "6. Get Dashboard Stats",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/dashboard/stats",
          "host": ["{{baseUrl}}"],
          "path": ["dashboard", "stats"]
        }
      }
    },
    {
      "name": "7. Get Kanban Data",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/requests/kanban",
          "host": ["{{baseUrl}}"],
          "path": ["requests", "kanban"]
        }
      }
    },
    {
      "name": "8. Get All Equipment",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/equipment",
          "host": ["{{baseUrl}}"],
          "path": ["equipment"]
        }
      }
    },
    {
      "name": "9. Get All Requests",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/requests",
          "host": ["{{baseUrl}}"],
          "path": ["requests"]
        }
      }
    },
    {
      "name": "10. Update Request Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"In Progress\",\n  \"duration\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/requests/REPLACE_WITH_REQUEST_ID/status",
          "host": ["{{baseUrl}}"],
          "path": ["requests", "REPLACE_WITH_REQUEST_ID", "status"]
        }
      }
    }
  ]
}